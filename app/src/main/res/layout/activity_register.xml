<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/usrPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usrText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/alike"
        android:text="Username"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/usrPlain"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pswrdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/alike"
        android:text="Password"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/pswrdPlain"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pswrdPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/pswrdText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pswrdText" />

    <EditText
        android:id="@+id/mailPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="e-Mail"
        app:layout_constraintStart_toStartOf="@+id/telPlain"
        app:layout_constraintTop_toBottomOf="@+id/telPlain" />

    <EditText
        android:id="@+id/nomePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Nome"
        app:layout_constraintStart_toStartOf="@+id/pswrdText"
        app:layout_constraintTop_toBottomOf="@+id/pswrdPlain" />

    <EditText
        android:id="@+id/cognomePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Cognome"
        app:layout_constraintStart_toStartOf="@+id/nomePlain"
        app:layout_constraintTop_toBottomOf="@+id/nomePlain" />

    <EditText
        android:id="@+id/telPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Telefono"
        app:layout_constraintStart_toStartOf="@+id/cognomePlain"
        app:layout_constraintTop_toBottomOf="@+id/cognomePlain" />

    <EditText
        android:id="@+id/comunePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Comune"
        app:layout_constraintStart_toStartOf="@+id/mailPlain"
        app:layout_constraintTop_toBottomOf="@+id/mailPlain" />

    <Button
        android:id="@+id/btnregistra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorButton"
        android:fontFamily="@font/alike"
        android:text="Registrati"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>