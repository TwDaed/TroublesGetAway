<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/usrPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usrText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pswrdPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pswrdText"
        app:layout_constraintTop_toBottomOf="@+id/usrPlain" />

    <EditText
        android:id="@+id/nomePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Nome"
        app:layout_constraintBottom_toTopOf="@+id/cognomePlain"
        app:layout_constraintStart_toStartOf="@+id/cognomePlain" />

    <EditText
        android:id="@+id/cognomePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="301dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Cognome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/telPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Telefono"
        app:layout_constraintStart_toStartOf="@+id/cognomePlain"
        app:layout_constraintTop_toBottomOf="@+id/cognomePlain" />

    <EditText
        android:id="@+id/mailPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="e-Mail"
        app:layout_constraintEnd_toEndOf="@+id/telPlain"
        app:layout_constraintTop_toBottomOf="@+id/telPlain" />

    <TextView
        android:id="@+id/usrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/alike"
        android:text="Username"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/usrPlain"
        app:layout_constraintEnd_toStartOf="@+id/usrPlain"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pswrdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/alike"
        android:text="Password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pswrdPlain"
        app:layout_constraintEnd_toStartOf="@+id/pswrdPlain"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/comunePlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:fontFamily="@font/alike"
        android:inputType="textPersonName"
        android:text="Comune"
        app:layout_constraintStart_toStartOf="@+id/mailPlain"
        app:layout_constraintTop_toBottomOf="@+id/mailPlain" />

    <Button
        android:id="@+id/btnregistra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:backgroundTint="@color/colorButton"
        android:fontFamily="@font/alike"
        android:text="Registrati"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comunePlain"
        app:layout_constraintStart_toEndOf="@+id/comunePlain" />

</android.support.constraint.ConstraintLayout>